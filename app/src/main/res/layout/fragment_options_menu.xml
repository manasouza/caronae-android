<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

            <RelativeLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/menu_profile_background">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/user_pic"
                    app:civ_border_color="@color/dark_gray"
                    android:clickable="true"
                    android:focusable="true"
                    app:civ_border_width="3dp" />

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:layout_below="@id/user_pic"
                        android:text="Paula Silva"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profile_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/name_tv"
                        android:text="Graduação | Bacharelado em Ciência da Computação"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="14sp"
                         />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_below="@id/profile_tv">
                    </ImageView>
            </RelativeLayout>
            <ImageView
                android:id="@+id/color_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay1"
                android:src="@drawable/color_bar" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/color_bar"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/myprofile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_myprofile_title"
                    android:textSize="17sp"
                    android:textColor="@color/dark_gray"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/history_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/historic"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_below="@id/myprofile_btn"
                    android:textColor="@color/dark_gray"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/faq_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faq_uppercase"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_below="@id/history_btn"
                    android:textColor="@color/dark_gray"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/falae_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_falae_title"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_below="@id/faq_btn"
                    android:textColor="@color/dark_gray"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/termsofuse_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_termsofuse_title"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_below="@id/falae_btn"
                    android:textColor="@color/dark_gray"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/about_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_about_title"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_below="@id/termsofuse_btn"
                    android:textColor="@color/dark_gray"
                    android:clickable="true"
                    android:focusable="true"/>
            </RelativeLayout>
    </RelativeLayout>
</ScrollView>